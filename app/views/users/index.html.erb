<h1>Register</h1>
<% if flash[:reg_errors] %>
	<% flash[:reg_errors].each do |msg| %>
		<ul>
			<li class="errors"><%= msg %></li>
		</ul>
	<% end %>
<% end %>
<form action="/users" method="post">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

	<label for="first_name">First Name</label>
	<input type="text" name="user[first_name]"><br>

	<label for="last_name">Last Name</label>
	<input type="text" name="user[last_name]"><br>

	<label for="email">Email</label>
	<input type="text" name="user[email]"><br>

	<label for="password">Password</label>
	<input type="password" name="user[password]"><br>

	<label for="password_confirmation">Confirm Password</label>
	<input type="password" name="user[password_confirmation]"><br>

	<input type="submit" value="Register"> 
</form>

<h1>OR LOGIN MUTHA-EFFA</h1>
<% if flash[:login_errors] %>
	<% flash[:login_errors].each do |msg| %>
		<ul>
			<li class="errors"><%= msg %></li>
		</ul>
	<% end %>
<% end %>
<form action="/users/login" method="post">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

	<label for="email">Email</label>
	<input type="text" name="email"><br>

	<label for="password">Password</label>
	<input type="password" name="password"><br>

	<input type="submit" value="Login"> 

</form>